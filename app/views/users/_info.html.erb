<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>

  </tr>
  <tr>
    <th>follows</th>
    <th><%= user.followings.count %></th>
    <th><%=link_to "フォロー", follows_user_path(user.id) %></th>
  </tr>
  <tr>
    <th>followers</th>
    <th><%= user.followers.count %></th>
    <th><%=link_to "フォロワー", followers_user_path(user.id) %></th>
  </tr>
</table>

        <% if user.followed_by?(current_user) %>
            <p><%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete %></p>
        <% else %>
            <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
        <% end %>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>